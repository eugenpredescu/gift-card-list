{
  "name": "gift-card-list",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "lint": "eslint --ext js,jsx,ts,tsx .",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json}\"",
    "lint:locales": "intl-equalizer",
    "test": "cd ./react && yarn test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js,tsx,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,graphql,gql}": [
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ],
    "messages/*.json": [
      "yarn lint:locales"
    ]
  },
  "devDependencies": {
    "@types/node": "^12.12.21",
    "@vtex/danger": "^0.2.7",
    "@vtex/intl-equalizer": "^2.5.1",
    "@vtex/prettier-config": "^0.3.6",
    "@vtex/test-tools": "^3.4.3",
    "eslint": "^7.16.0",
    "eslint-config-vtex": "^12.9.3",
    "eslint-config-vtex-react": "^6.3.2",
    "husky": "^4.3.6",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "react-intl": "^5.24.2",
    "typescript": "^3.7.5",
    "jest": "^27.2.5",
    "babel-jest": "^27.2.5",
    "ts-jest": "^27.0.3",
    "@babel/core": "^7.15.8",
    "@babel/preset-env": "^7.15.8"
  },
  "dependencies": {
    "@types/jest": "^27.0.2",
    "@types/mocha": "^9.0.0",
    "@vtex/clients": "^2.19.1",
    "babel-plugin-react-intl": "^8.2.25",
    "react-apollo": "^3.1.5",
    "react-intl": "^5.24.2",
    "z": "1.0.9"
  }
}
